<MudAutocomplete @bind-Value="Airport"
                 Required
                 Validation="@(new Func<AirportDto, IEnumerable<string>>(Validate))"
                 T="AirportDto"
                 ToStringFunc="@(airport => airport?.Name)"
                 SearchFuncWithCancel="@SearchFuncWithCancel"
                 Label="@Label"
                 Strict="false"
                 Immediate="false"
                 CoerceText="false"
                 CoerceValue="false"
                 Variant="Variant.Text"
                 ShowProgressIndicator="true">
    <ProgressIndicatorTemplate>
        <MudProgressLinear Size="Size.Small" Indeterminate="true" Color="Color.Default" />
    </ProgressIndicatorTemplate>
    <ItemTemplate Context="airport">
        <MudGrid Spacing="1" Justify="Justify.SpaceBetween">
            <MudItem>
                <MudField Variant="Variant.Text">@airport.IataCode</MudField>
            </MudItem>
            <MudItem>
                <MudField Label="@airport.CountryName">@airport.Name</MudField>
            </MudItem>
        </MudGrid>
    </ItemTemplate>
</MudAutocomplete>
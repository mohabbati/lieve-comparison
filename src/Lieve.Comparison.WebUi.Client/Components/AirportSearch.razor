@using Lieve.Comparison.Domain.Shared.Enums
@rendermode InteractiveAuto

<h6>Compare flights</h6>

<EditForm Model="@model" OnValidSubmit="Submit">
    <DataAnnotationsValidator />

    <BitDropdown @bind-Value="model.Origin"
                    @oninput="async (o) => await SetDropDownList(originAirports, o.Value!.ToString())"
                    Items="originAirports"
                    Placeholder="Origin"
                    IsRequired="true"
                    Combo />

    <BitDropdown @bind-Value="model.Destination"
                    @oninput="async (o) => await SetDropDownList(destinationAirports, o.Value!.ToString())"
                    Items="destinationAirports"
                    Placeholder="Origin"
                    IsRequired="true"
                    Combo />

    <MudGrid>
        <MudItem xs="12" sm="6" md="4">
            <MudAutocomplete T="string" Label="Origin" @bind-Value="model.Destination" SearchFuncWithCancel="@Search" Variant="Variant.Outlined" ShowProgressIndicator="true" />
        </MudItem>
    </MudGrid>

